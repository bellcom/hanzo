  'fx/css/cart.css'
  'fx/css/account.css'
  'fx/css/dialoug.css'
  'fx/css/checkout.css'
  'fx/css/maps.css'
  'fx/css/search.css'

  filter='?yui_css'
  output='fx/cache/all.css'
  combine=true
%}
<link rel="stylesheet" href="{{ asset_url }}" media="all">
{% endstylesheets %}

<script type="text/javascript" src="/fx/scripts/modernizr-2.0.6.min.js"></script>
<script type="text/javascript">
var base_url = '{{ url('_homepage') }}';
var cdn_url = '{{ cdn }}';
</script>

</head>
<body id="body-{{ page_type|default('page') }}" class="{{ body_classes|default('cms global') }}">

<div id="container">
  <a href="{{ path('_homepage') }}" title="{{ "home"|trans }}">
    {{ fx_image_tag('images/POMPdeLUX_logo.png', '', {'id':'logo', 'alt':'POMPdeLUX'}) }}
  </a>

  <div id="main" role="main">

    {% if app.session.get('in_edit') %}
      {{ 'order.edit.global.notice'|trans({
        '%history_url%' : url('_account_show_order', {order_id : app.session.get('order_id')}),
        '%order_id%' : app.session.get('order_id'),
        '%stop_url%' : url('_account', {stop : 1})
      })|raw }}
    {% endif %}

    {% render 'HanzoCMSBundle:Menu:menu' with {'type': 'sub', 'from': 400, 'offset': 482 } %}
    {% block content %}
    {% endblock %}

  </div><!-- /div#main -->

  <nav class="main">
    {% render 'HanzoCMSBundle:Menu:menu' with {'type': 'main', 'from': 20 } %}
  </nav><!-- /nav.main -->

  <aside id="secondary-links">
    <ul>
      <li><a href="{{ path('_account') }}">{{ "my.account"|trans({}, 'account') }}</a></li>
    {% if is_granted('ROLE_USER') %}
      <li><a href="{{ path('logout') }}">{{ 'my.account.logout'|trans({}, 'account') }}</a></li>
    {% endif %}
      <li id="select-domain">
        <a class="open-menu" href="#">Change Country</a>
        <div style="display: none">
          <a href="http://www.pompdelux.dk/">Denmark</a><br><br>
          <a href="http://www.pompdelux.com/">International</a><br><br>
          <a href="http://www.pompdelux.nl/">Netherlands</a><br><br>
          <a href="http://www.pompdelux.no/">Norway</a><br><br>
          <a href="http://www.pompdelux.se/">Sweden</a><br>
        </div>
      </li>
      <li id="mini-basket" class="basket">
        <a href="{{ path('basket_view') }}" title="{{ "show.basket"|trans }}"> {% render 'BasketBundle:Default:miniBasket' %} </a>
      </li>
      <li><a href="{{ path('basket_view') }}">{{ "show.basket"|trans }}</a></li>
    </ul>
  </aside>

{% if page_type == 'frontpage' %}
  {{ front_page_teasers() }}
{% endif %}

</div>

<footer>
  <ul>
    <li>{{ fx_image_tag('images/creditcards_dk.png', '', {'alt':'credit cards'}) }}</li>
    <li>POMPdeLUX ApS</li>
    <li>Møgelhøj 8</li>
    <li>DK-8520 Lystrup</li>
    <li>CVR-nr 29622035</li>
    <li><a href="mailto:mail@pompdelux.dk">mail@pompdelux.dk</a></li>
    <li>+45 8678 7871</li>
  </ul>
</footer>

<script type="text/javascript">
var counter_offset = 1314691200;

{% if page_type|default('page') == 'frontpage' %}
var vegas_backgrounds = [
  { src: '{{ image_path('/fx/images/bg/01.jpg') }}', fade:1000, loading: false, valign: 'top' },
  { src: '{{ image_path('/fx/images/bg/02.jpg') }}', fade:1000, loading: false, valign: 'top' },
  { src: '{{ image_path('/fx/images/bg/03.jpg') }}', fade:1000, loading: false, valign: 'top' },
