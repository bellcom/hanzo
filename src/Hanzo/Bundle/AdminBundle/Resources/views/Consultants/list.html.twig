{% extends '::adminbase.html.twig' %}

{% block content %}
<nav class="sub">
  <ul>
    <li>
      <form action="{{ path('admin_customers') }}" method="get">
        <input type="text" id="searh" name="q" placeholder="{{ 'search.label'|trans({}, 'admin') }}">
        <input class="button search" type="submit" value="{{ 'search'|trans({}, 'admin') }}">
      </form>
    </li>
    <li>
      <a href="{{ path('admin_customers') }}">
        {{ 'admin.customers.list.link'|trans({}, 'admin') }}
      </a>
    </li>
  </ul>
</nav>

<h1>{{ 'admin.consultants.header.text'|trans({}, 'admin') }}</h1>

{% if app.session.hasFlash('notice') %}
<div class="message notice">
  {{ app.session.flash('notice')|trans({}, 'admin') }}
</div>
{% endif %}

<p>{{ 'admin.consultants.description.text'|trans({}, 'admin') }}</p>


{% if consultants|length > 0 %}

<table id="consultants">
  <thead>
    <tr>
      <th class="initials">{{ 'admin.consultant.initials'|trans({}, 'admin') }}</th>
      <th class="first-name">{{ 'admin.customer.first_name'|trans({}, 'admin') }}</th>
      <th class="last-name">{{ 'admin.customer.last_name'|trans({}, 'admin') }}</th>
      <th class="email">{{ 'admin.customer.email'|trans({}, 'admin') }}</th>
      <th class="phone">{{ 'admin.customer.phone'|trans({}, 'admin') }}</th>
      <th class="discount">{{ 'admin.customer.discount'|trans({}, 'admin') }}</th>
      <th class="is-active">{{ 'admin.customer.is_active'|trans({}, 'admin') }}</th>
      <th class="info">{{ 'admin.consultant.info'|trans({}, 'admin') }}</th>
      <th class="event-notes">{{ 'admin.consultant.event_notes'|trans({}, 'admin') }}</th>
      <th class="max-notified">{{ 'admin.consultant.max_notified'|trans({}, 'admin') }}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for consultant in consultants %}
    <tr>
      <td>{{ consultant.initials }}</td>
      <td>{{ consultant.customers.firstname }}</td>
      <td>{{ consultant.customers.lastname }}</td>
      <td>{{ consultant.customers.email }}</td>
      <td>{{ consultant.customers.phone }}</td>
      <td>{{ consultant.customers.discount }}</td>
      <td>{{ consultant.info }}</td>
      <td>{{ consultant.eventnotes }}</td>
      <td>{{ consultant.maxnotified }}</td>
      <td>
        {% if consultant.customers.isactive == 1 %}
          {{ 'admin.customer.activated'|trans({}, 'admin') }}
        {% else %}
          {{ 'admin.customer.deactivated'|trans({}, 'admin') }}
        {% endif %}
      </td>
      <th>
        <span class="edit">
          <a href="{{ path('admin_customer', {'id' : consultant.customers.id}) }}">
            {{ 'admin.consultant.edit'|trans({}, 'admin') }}
          </a>
        </span>
      </th>
    </tr>
  {% endfor %}
  </tbody>
</table>
  {% if paginate %}
    {% import "::macro.pager.html.twig" as p %}
    {{ p.pager(paginate, 'customers') }}
  {% endif %}

{% else %}

<p>{{ 'admin.customers.no.customers.text'|trans({}, 'admin') }}</p>

{% endif %}
{% endblock %}
