<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Hanzo\Model" defaultIdMethod="native">

    <table name="search_fulltext">
        <column name="id" required="true" primaryKey="true" autoIncrement="true" type="INTEGER" />
        <column name="type" type="VARCHAR" required="true" size="12" defaultValue="cms" />
        <column name="target" type="VARCHAR" required="true" />
        <column name="locale" type="VARCHAR" size="12" required="true" />
        <column name="content" type="LONGVARCHAR" />

        <index name="sf_fulltext_index">
            <index-column name="content" />
            <vendor type="mysql">
                <parameter name="Index_type" value="FULLTEXT" />
            </vendor>
        </index>
        <index name="sf_locale_index">
            <index-column name="locale" />
        </index>
        <vendor type="mysql">
            <parameter name="Engine" value="MyISAM" />
        </vendor>
    </table>

</database>
