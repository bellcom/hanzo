<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="google.twig_extension.class">Hanzo\Bundle\GoogleBundle\Twig\Extension\GoogleExtension</parameter>
    </parameters>

    <services>
        <service id="google.twig_extension" class="%google.twig_extension.class%">
            <argument type="string">%google.analytics_code%</argument>
            <argument type="string">%google.conversion_id%</argument>
            <argument type="string">%google.site_verification%</argument>
            <tag name="twig.extension"></tag>
        </service>
    </services>
</container>
