{% extends '::base.html.twig' %}

{% block content %}

<div class="left">

  <div class="productimages">
    <div class="productimage-large">
      <a href="{{ product_image_url(product.main_image.name, '0x715') }}" data-id="image-id-{{ product.main_image.id }}" data-src="{{ product_image_url(product.main_image.name, '38x75') }}">
        {{ product_image_tag(product.main_image.name, '165x330') }}
      </a>
    </div>

  {% if product.images is not empty %}
    <div class="productimage-small">
    {% for image in product.images %}
      <div class="productimage-small-padding">
        <a href="{{ product_image_url(image.name, '0x715') }}" data-id="image-id-{{ image.id }}" data-src="{{ product_image_url(image.name, '165x330') }}">
          {{ product_image_tag(image.name, '38x75') }}
        </a>
      </div>
    {% endfor %}
      <br style="clear:both;" />
    </div>
  {% endif %}

    <a href="/rest/v1/video" data-width="248" data-height="360" data-src="{{ product.title|replace(' ', '_') }}" data-banner="video_bg" class="video video-popper">&nbsp;</a>
  </div>

  <div id="colorbox-slideshow">
    <a href="#">» {{ "Slideshow"|trans }}</a>
  </div>

    <div class="style-guide">
      <b>{{ "Style guide"|trans }}</b>

    {% for id, references in references %}
      <div class="element image-id-{{ id }}">
      {% for item in references.references %}
        <a href="{{ item.url }}">{{ item.title }}</a><br>
      {% endfor %}
      <a href="/buy-set/{{ product.id }}/{{ id }}">» {{ "Buy set"|trans }}</a>
      </div>
    {% endfor %}
  </div>
</div>

<div class="right">
  <h1>{{ product.title }}</h1>

  <div class="productdescription">

    <ul class="tabs">
      <li><a href="#">{{ "Product details"|trans }}</a></li>
      <li><a href="#">{{ "Care instructions"|trans }}</a></li>
    </ul>

    <div class="panes">
      <div>{{ product.description|raw }}</div>
      <div class="off">{{ product.washing|raw }}</div>
    </div>

    <div class="buybox clearfix">
      <div class="prices">
      {% if product.prices.sales %}
        <span class="normal strike">{{ product.prices.normal|money }}</span>
        <span class="discount">{{ product.prices.sales|money }}</span>
      {% else %}
        <span class="normal">{{ product.prices.normal|money }}</span>
      {% endif %}
      </div>


      <form action="/add-to-basket" method="post" class="buy">
        <div class="options">
          <label for="size">
            {{ "Size"|trans }}:
            <select id="size" name="size"></select>
          </label>

          <label for="color">
            {{ "Color"|trans }}:
            <select id="color" name="color"></select>
          </label>

          <label for="quantity">
            {{ "Quantity"|trans }}:
            <select id="quantity" name="quantity">
            {% for i in 1..10 %}
              <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
            </select>
          </label>
        </div>
        <input type="submit" value="{{ "Add to basket"|trans }}" class="button">
        <input type="hidden" id="master" name="master" value="{{ product.master }}">
      </form>
    </div>
  </div>
</div>

{% endblock %}

