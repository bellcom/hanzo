{% extends '::adminbase.html.twig' %}

{% block content %}
<nav class="sub">
  <ul>
    <li id="select-language">
	    <a class="open-menu" href="#">
	      {{ 'domain.selector'|trans({}, 'admin') }}
	    </a>
	    <div style="display:none;">
	      <ul>
	      {% for domain in domains_availible %}
	        <li>
	          <a href="{{ path('admin_settings_domain', {'domain_key' : domain.domainkey}) }}">
	            <span class="flag {{ domain.domainkey }}"></span>{{ domain.domainkey }}
	          </a>
	        </li>
	      {% endfor %}
	      </ul>
	    </div>
    </li>
    <li>
      <a href="{{ path('admin_settings_payment_delivery') }}">
        {{ 'admin.payment_delivery.link'|trans({}, 'admin') }}
      </a>
    </li>
    <li>
      <a href="{{ path('admin_settings_messages') }}">
        {{ 'admin.messages.link'|trans({}, 'admin') }}
      </a>
    </li>
    <li>
      <a href="{{ path('admin_settings_languages') }}">
        {{ 'admin.languages.link'|trans({}, 'admin') }}
      </a>
    </li>
  </ul>
</nav>

<h1>{{ 'admin.settings.header.text'|trans({}, 'admin') }}</h1>

{% if app.session.hasFlash('notice') %}
<div class="message notice">
  {{ app.session.flash('notice')|trans({}, 'admin') }}
</div>
{% endif %}

<div>
	<p>{{ 'admin.settings.description.text'|trans({}, 'admin') }}</p>

	<form id="settings-list" action="{{ path('admin_settings') }}" method="post" {{ form_enctype(form) }}>
	  <div>
	  	{{ form_rest(form) }}
	    {{ form_row(form._token) }}
	  </div>
	  <input class="button right" type="submit" value="{{ 'save.settings'|trans({}, 'admin') }}">
	  <a class="button left" href="{{ path('admin_settings') }}">{{ 'cancel'|trans({}, 'admin') }}</a>
	</form>
</div>
<div>
	<h1>{{ 'admin.settings.add.header.text'|trans({}, 'admin') }}</h1>
	<p>{{ 'admin.settings.add.description.text'|trans({}, 'admin') }}</p>

	<form id="add-setting" action="{{ path('admin_setting_add') }}" method="post" {{ form_enctype(add_global_setting_form) }}>
	  <div>
	  	{{ form_rest(add_global_setting_form) }}
	    {{ form_row(add_global_setting_form._token) }}
	  </div>
	  <input class="button" type="submit" value="{{ 'add.setting'|trans({}, 'admin') }}">
	</form>
</div>

{% endblock %}
