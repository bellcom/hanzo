{% extends layout %}
{% block content %}

{% if page_type|default('page') == 'frontpage' and store_mode == 'webshop' %}

{# http://thiagosf.net/projects/jquery/skitter/ #}

  <article>
    <div id="skitter">

    {% if app.session.locale == 'da_DK' %}

      <a href="/app_dev.php/da_DK/forside/dressing-room">{{ image_tag('images/frontpage/da_DK-1.jpg') }}</a>
      <a href="/app_dev.php/da_DK/forside/nyheder">{{ image_tag('images/frontpage/da_DK-2.jpg') }}</a>
      <a href="/forside/video">{{ image_tag('images/frontpage/da_DK-3.jpg') }}</a>

    {% elseif app.session.locale == 'en_GB' %}
    {% elseif app.session.locale == 'fi_FI' %}
    {% elseif app.session.locale == 'nb_NO' %}
    {% elseif app.session.locale == 'nl_NL' %}
    {% elseif app.session.locale == 'sv_SE' %}
    {% endif %}

    </div>
  </article>

{% else %}
  <h1>{{ page.title }}</h1>
  <article>
    {{ parse(page.content) }}
  </article>
{% endif %}

{% endblock %}

{# block javascript %}
{% if page_type|default('page') == 'frontpage' and store_mode == 'webshop' %}
<script src="{{ cdn|replace({'http:':''}) }}fx/scripts/frontpage.js"></script>
{% endif %}
{% endblock #}

{% block javascript %}

<script type="text/javascript" src="{{ cdn }}fx/scripts/jquery.cycle.lite.js"></script>
<style type="text/css">
#skitter {
  margin-top: 70px;
  overflow: hidden;
  height: 542px;
  width: 736px;
}
</style>
<script>
(function($, undefined) {
  $('#skitter').cycle({fx: 'fade'});
})(jQuery);
</script>
{% endblock %}
