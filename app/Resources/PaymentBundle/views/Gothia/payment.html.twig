{% extends layout %}

{% block content %}
<h1>{{ 'page.heading'|trans({},'gothia') }}</h1>

<div id="gothia-payment-step-1" style="display: none">
  <h2>{{ 'page.heading_step1'|trans({},'gothia') }}</h2>
  <div class="help">{{ 'page.help_text'|trans({},'gothia')|raw }}</div>
  <br>
  <div id="gothia-account-container">
    <form action="{{ path('PaymentBundle_gothia_payment_checkcustomer') }}" method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <input class="button right" type="submit" value="{{ 'form.submit_step1'|trans({},'gothia') }}" name="action-submit-gothia-checkcustomer" id="action-submit-gothia-checkcustomer"/>
      <a href="{{ path('PaymentBundle_gothia_payment_cancel') }}" class="button left">{{ 'form.cancel'|trans({},'gothia') }}</a>
    </form>
  </div>
</div>
<div id="gothia-payment-step-2" style="display: none">
  <h2>{{ 'page.heading_step2'|trans({},'gothia') }}</h2>
  <div id="gothia-confirm-container">
    <form action="{{ path('PaymentBundle_gothia_payment_confirm') }}" method="post" {{ form_enctype(form) }}>
      <input class="button right" type="submit" value="{{ 'form.submit_step2'|trans({},'gothia') }}" name="action-submit-gothia-confirm" id="action-submit-gothia-confirm"/>
      <a href="{{ path('PaymentBundle_gothia_payment_cancel') }}" class="button left">{{ 'form.cancel'|trans({},'gothia') }}</a>
    </form>
  </div>
</div>
<div id="gothia-payment-step-3" style="display: none">
  <div id="gothia-success-container">
    <form action="{{ path('PaymentBundle_gothia_process') }}" method="post" {{ form_enctype(form) }}>
      <input type="hidden" value="gothia" name="paytype" />
    </form>
  </div>
</div>
{% endblock %}

{% block javascript %}
<script>$(function () {gothia.init( {{step}} );});</script>
{% endblock javascript %}
