</head>
<body id="body-{{ page_type|default('admin') }}" class="{{ body_classes|default('cms global') }}">

<div id="container">
  <a href="{{ path('admin') }}" title="{{ "admin.home"|trans }}">
    {{ fx_image_tag('images/POMPdeLUX_logo_SS12.png', '', {'id':'logo', 'alt':'POMPdeLUX'}) }}
  </a>

  {% if is_granted('ROLE_ADMIN') %}
  <nav class="main">
    <ul>
      <li><a href="{{ path('admin') }}">Forside</a></li>
      <li><a href="{{ path('admin_statistics') }}">Salgs statistik</a></li>
      <li><a href="{{ path('admin_settings') }}">Indstillinger</a></li>
      <li><a href="{{ path('admin_cms') }}">CMS</a></li>
      <li><a href="{{ path('admin_customers') }}">Kunder</a></li>
      <li><a href="{{ path('admin_consultants') }}">Konsulenter</a></li>
      <li><a href="{{ path('admin_employees') }}">Medarbejdere</a></li>
      <li><a href="{{ path('admin_orders') }}">Ordrer</a></li>
      <li><a href="{{ path('admin_products') }}">Katalog</a></li>
      <li><a href="{{ path('admin_settings_washing_instructions') }}">Vaskeanvisninger</a></li>
      <li><a href="{{ path('admin_coupons') }}">Gavekort</a></li>
      <li><a href="{{ path('admin_postalcode') }}">Post Numre</a></li>
      <li><a href="{{ path('admin_helpdesk') }}">Helpdesk</a></li>
      <li><a href="{{ path('admin_tools') }}">Tools</a></li>
    </ul>
  </nav><!-- /nav.main -->
  {% endif %}
  {% if is_granted('ROLE_SALES') and not is_granted('ROLE_ADMIN')  %}
  <nav class="main">
    <ul>
      <li><a href="{{ path('admin_consultants') }}">Konsulenter</a></li>
      <li><a href="{{ path('admin_products') }}">Katalog</a></li>
    </ul>
  </nav><!-- /nav.main -->
  {% endif %}

  <div id="main" role="main">
    {% block content %}
    {% endblock %}
  </div><!-- /div#main -->

  <aside id="secondary-links" role="secondary-links">
    <ul>
      <li>
        <a href="{{ path('logout') }}">Log Ud</a>
      </li>
      <li id="select-database">
        <a class="open-menu" href="#"><span class="flag {{ database|default('pdldbda') }}"></span>{{ database|default('default') }} - Vælg domæne database &darr;</a>
        <div style="display: none">
          <a href="{{ path('admin_database') }}" class=""><span class="flag DK"></span><span class="flag COM"></span> .DK/.COM (pdlda)</a><br><br>
          <a href="{{ path('admin_database', {name : 'pdldbse1'}) }}" class=""><span class="flag SE"></span> .SE (pdldbse1)</a><br><br>
          <a href="{{ path('admin_database', {name : 'pdldbno1'}) }}" class=""><span class="flag NO"></span> .NO (pdldbno1)</a><br><br>
          <a href="{{ path('admin_database', {name : 'pdldbfi1'}) }}" class=""><span class="flag FI"></span> .FI (pdldbfi1)</a><br><br>
          <a href="{{ path('admin_database', {name : 'pdldbnl1'}) }}" class=""><span class="flag NL"></span> .NL (pdldbnl1)</a><br><br>
        </div>
      </li>
      <li id="select-cache">
        <a class="open-menu" href="#">Ryd Cache &darr;</a>
        <div style="display: none">
          <a href="{{ path('admin_cache_jscss') }}" class="cache-clear">Ryd js + css</a><br><br>
          <a href="{{ path('admin_cache_redis') }}" class="cache-clear">Ryd Redis</a><br><br>
          <a href="{{ path('admin_cache_file') }}" class="cache-clear">Ryd filer</a><br><br>
          <a href="{{ path('admin_cache_router') }}" class="cache-clear">Genopbyg router</a><br><br>
        </div>
      </li>
      <li id="select-domain">
        <a class="open-menu" href="#">Gå til POMPdeLUX site &darr;</a>
        <div style="display: none">
          <a href="http://www.pompdelux.dk/">Denmark</a><br><br>
          <a href="http://www.pompdelux.com/">International</a><br><br>
          <a href="http://www.pompdelux.nl/">Netherlands</a><br><br>
          <a href="http://www.pompdelux.no/">Norway</a><br><br>
          <a href="http://www.pompdelux.se/">Sweden</a><br>
        </div>
      </li>
    </ul>
  </aside>

</div>

<footer>
  <ul>
    <li>{{ fx_image_tag('images/creditcards_dk.png', '', {'alt':'credit cards'}) }}</li>
