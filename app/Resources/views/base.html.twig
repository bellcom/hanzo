<script type="text/javascript" src="{{ cdn }}fx/scripts/modernizr-2.5.3.js"></script>
</head>
<body id="body-{{ page_type|default('page') }}" class="{{ body_classes|default('cms global') }}">

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/{{ locale }}/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="container">
  <a href="{{ path('_homepage', {'_locale' : app.session.locale}) }}" title="{{ "home"|trans }}">
    {{ fx_image_tag('images/POMPdeLUX_logo_SS12.png', '', {'id':'logo', 'alt':'POMPdeLUX'}) }}
  </a>

  <div id="main" role="main">
    {% render 'CMSBundle:Menu:menu' with {'type': sub_menu.type, 'from': sub_menu.from, 'thread': sub_menu.thread, 'offset': sub_menu.offset } %}
    {% block content %}{% endblock %}
  </div><!-- /div#main -->

  <nav class="main">
    {% render 'CMSBundle:Menu:menu' with {'type': left_menu.type, 'thread': left_menu.thread, 'from': left_menu.from } %}
  </nav><!-- /nav.main -->

  <aside id="secondary-links">
    <ul>
      <li><a href="{{ path('_account', {'_locale' : app.session.locale}) }}">{{ "my.account"|trans({}, 'account') }}</a></li>
      <li id="select-domain">
        <a class="open-menu" href="#">Change Country</a>
        <div style="display: none">
          <a href="{{ baseurl }}/da_DK/">Denmark</a><br><br>
	      <a href="{{ baseurl }}/fi_FI/">Finland</a><br><br>
          <a href="{{ baseurl }}/en_GB/">International</a><br><br>
          <a href="{{ baseurl }}/nl_NL/">Netherlands</a><br><br>
	      <a href="{{ baseurl }}/nb_NO/">Norway</a><br><br>
          <a href="{{ baseurl }}/sv_SE/">Sweden</a><br>
        </div>
      </li>
      <li id="mini-basket" class="basket">
        <a href="{{ path('basket_view', {'_locale' : app.session.locale}) }}" title="{{ "show.basket"|trans }}"> {% render 'BasketBundle:Default:miniBasket' %} </a>
      </li>
      <li><a href="{{ path('basket_view', {'_locale' : app.session.locale}) }}">{{ "show.basket"|trans }}</a></li>
    </ul>
  </aside>

{% if page_type == 'frontpage' %}
  {{ front_page_teasers() }}
{% endif %}

</div>

<footer>
  {{ 'footer.address'|trans({'%cdn%':cdn})|raw }}
</footer>
<script type="text/javascript">
  var cookie_params = {
    'domain' : '{{ app.request.getHttpHost() }}',
    'path' : '{{ path('_homepage', {'_locale' : app.session.locale}) }}'
  };
  var base_url = '{{ url('_homepage', {'_locale' : app.session.locale}) }}';
  var cdn_url = '{{ cdn }}';
  var counter_offset = 1314691200;
</script>

<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translation.js') }}"></script>
<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'js', '_locale' : app.session.locale }) }}"></script>


