{% extends layout %}

{% block content %}
<nav class="sub">
  <ul>
  </ul>
</nav>

{% if event %}
<h1>{{ 'events.rsvp.top.header.text'|trans({}, 'events') }}</h1>

{% if app.session.hasFlash('notice') %}
<div class="message notice">
  {{ app.session.flash('notice')|trans({}, 'events') }}
</div>
{% endif %}

<table id="event" class="list">
  <tbody>
    <tr>
      <th>{{ 'events.code'|trans({}, 'events') }}</th>
      <td>{{ event.code }}</td>
    </tr>
    <tr>
      <th>{{ 'events.event_date'|trans({}, 'events') }}</th>
      <td>{{ event.eventdate }}</td>
    </tr>
    <tr>
      <th>{{ 'events.host'|trans({}, 'events') }}</th>
      <td>{{ event.host }}</td>
    </tr>
    <tr>
      <th>{{ 'events.address_line_1'|trans({}, 'events') }}</th>
      <td>{{ event.addressline1 }}</td>
    </tr>
    <tr>
      <th>{{ 'events.address_line_2'|trans({}, 'events') }}</th>
      <td>{{ event.addressline2 }}</td>
    </tr>
    <tr>
      <th>{{ 'events.postal_code'|trans({}, 'events') }}</th>
      <td>{{ event.postalcode }}</td>
    </tr>
    <tr>
      <th>{{ 'events.city'|trans({}, 'events') }}</th>
      <td>{{ event.city }}</td>
    </tr>
    <tr>
      <th>{{ 'events.phone'|trans({}, 'events') }}</th>
      <td>{{ event.phone }}</td>
    </tr>
    <tr>
      <th>{{ 'events.email'|trans({}, 'events') }}</th>
      <td>{{ event.email }}</td>
    </tr>
    <tr>
      <th>{{ 'events.description'|trans({}, 'events') }}</th>
      <td>{{ event.description }}</td>
    </tr>
  </tbody>
</table>
  {% if form_rsvp %}
    <h1>{{ 'events.rsvp.header.text'|trans({}, 'events') }}</h1>
    <p>{{ 'events.rsvp.description.text'|trans({}, 'events') }}</p>
    <form action="{{ path('events_rsvp', {'key' : key}) }}" method="post" {{ form_enctype(form_rsvp) }} id="event-edit-form" class="create">
      <div id="events">
        {{ form_rest(form_rsvp) }}
        {{ form_row(form_rsvp._token) }}
      </div>
      <input class="button right" type="submit" value="{{ 'events.participant.rsvp.button'|trans({}, 'events') }}">
    </form>
  {% else %}
    <p>{{ 'events.too_late_to_rsvp.text'|trans({}, 'events') }}</p>
  {% endif %}

  {% if form_tell_a_friend %}
    <h1>{{ 'events.tell_a_friend.header.text'|trans({}, 'events') }}</h1>
    <p>{{ 'events.tell_a_friend.description.text'|trans({}, 'events') }}</p>
    <form action="{{ path('events_tell_a_friend', {'key' : key}) }}" method="post" {{ form_enctype(form_tell_a_friend) }} id="event-edit-form" class="create">
      <div id="events">
        {{ form_rest(form_tell_a_friend) }}
        {{ form_row(form_tell_a_friend._token) }}
      </div>
      <input class="button right" type="submit" value="{{ 'events.participant.tell_a_friend.button'|trans({}, 'events') }}">
    </form>
  {% endif %}
{% else %}
<h1>{{ 'events.not_found.header.text'|trans({}, 'events') }}</h1>
<p>{{ 'events.not_found.description.text'|trans({}, 'events') }}</p>

{% endif %}


{% endblock %}
