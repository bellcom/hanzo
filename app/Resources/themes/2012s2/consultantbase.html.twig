<!doctype html>
<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="{{ html_lang }}"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="{{ html_lang }}"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="{{ html_lang }}"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ html_lang }}"> <!--<![endif]-->
<head>
<title>{{ 'browser.title'|trans }} {{ browser_title|default('') }}</title>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="robots" content="NOINDEX, NOFOLLOW">

<link rel="dns-prefetch" href="{{ cdn|replace({'http:':''}) }}">
<link rel="dns-prefetch" href="//cdn.jquerytools.org">
<link rel="dns-prefetch" href="//html5shim.googlecode.com">
<link rel="dns-prefetch" href="//fonts.googleapis.com">

<link href="//fonts.googleapis.com/css?family=Merriweather:400,700,900" rel="stylesheet" type="text/css">
<link rel="shortcut icon" href="{{ image_path('/fx/images/favicon.ico') }}" title="POMPdeLUX" type="image/ico">

{% stylesheets
  'fx/css/boilerplate.css'
  'fx/css/faq.css'
  'fx/css/colorbox/theme4/colorbox.css'
  'fx/css/jquery-ui.css'
  'fx/scripts/video-js/video-js.css'
  'fx/scripts/fullcalendar/fullcalendar.css'

  'fx/css/main.css'
  'fx/css/category.css'
  'fx/css/product.css'
  'fx/css/cart.css'
  'fx/css/account.css'
  'fx/css/dialoug.css'
  'fx/css/checkout.css'
  'fx/css/maps.css'
  'fx/css/search.css'
  'fx/css/wall.css'
  'fx/css/events.css'
  'fx/css/quickorder.css'
  'fx/css/mobile.css'
  'fx/css/consultantnewsletter.css'

  output='fx/cache/c-all.css'
  combine=true
%}
<link rel="stylesheet" href="{{ asset_url }}" media="all">
{% endstylesheets %}

<script type="text/javascript" src="{{ cdn }}fx/scripts/modernizr-2.5.3.js"></script>
</head>
<body id="body-{{ page_type|default('page') }}" class="{{ body_classes|default('cms global consultant') }}">

<div id="container">
  <a href="{{ path('_homepage') }}" title="{{ "home"|trans }}">
    {{ fx_image_tag('images/POMPdeLUX_logo_SS12.png', '', {'id':'logo', 'alt':'POMPdeLUX'}) }}
  </a>

  <div id="main" role="main">
    {% render 'CMSBundle:Menu:menu' with {'type': sub_menu.type, 'from': sub_menu.from, 'thread': sub_menu.thread, 'offset': sub_menu.offset } %}
    {% block content %}{% endblock %}
  </div><!-- /div#main -->

  <nav class="main">
  {% if is_granted('ROLE_USER') %}
    {% render 'CMSBundle:Menu:menu' with {'type': left_menu.type, 'from': left_menu.from, 'thread': 10 } %}
  {% endif %}
  </nav><!-- /nav.main -->

{% if is_granted('ROLE_USER') %}
  {% if hide_mini_basket is not defined %}
  <aside id="secondary-links">
    <ul>
      <li><a href="{{ path('_account') }}">{{ "my.account"|trans({}, 'account') }}</a></li>
      <li id="mini-basket" class="basket">
        <a href="{{ path('basket_view') }}" title="{{ "show.basket"|trans }}"> {% render 'BasketBundle:Default:miniBasket' %} </a>
      </li>
      <li><a href="{{ path('basket_view') }}">{{ "show.basket"|trans }}</a></li>
    </ul>
  </aside>
  {% endif %}
{% endif %}

</div>

<script type="text/javascript">
  var cookie_params = {
    'domain' : '{{ app.request.getHttpHost() }}',
    'path' : '{{ path('_homepage', {'_locale' : app.request.locale}) }}'
  };
  var base_url = '{{ url('_homepage') }}';
  var cdn_url = '{{ cdn }}';
  var counter_offset = 1314691200;
</script>

<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'js', '_locale' : app.request.locale }) }}"></script>

{% javascripts
  'fx/scripts/jquery.min.js'
  'fx/scripts/jquery.tools.min.js'
  'fx/scripts/tinymce/jscripts/tiny_mce/jquery.tinymce.js'
  'fx/scripts/colorbox/colorbox/jquery.colorbox.js'
  'fx/scripts/zoom/jquery.zoom.js'
  'fx/scripts/accounting/accounting.min.js'
  'fx/scripts/jquery.formparams.js'
  'fx/scripts/jquery-cookie/jquery.cookie.js'

  'fx/scripts/flowplayer/flowplayer-3.2.11.min.js'
  'fx/scripts/countdown/jquery.countdown.js'
  'fx/scripts/countdown/jquery.countdown-dk.js'
  'fx/scripts/video-js/video.js'
  'fx/scripts/history.js/scripts/bundled/html4+html5/jquery.history.js'

  'fx/scripts/jaiks/jaiks.min.js'
  'fx/scripts/yatzy.js'
  'fx/scripts/dialoug.js'
  'fx/scripts/colorbox.js'
  'fx/scripts/flowplayer.js'
  'fx/scripts/video.js'

  'fx/scripts/category.js'
  'fx/scripts/product.js'
  'fx/scripts/cart.js'
  'fx/scripts/account.js'
  'fx/scripts/main.js'
  'fx/scripts/checkout.js'
  'fx/scripts/dibs-process.js'
  'fx/scripts/wall.js'
  'fx/scripts/events.js'
  'fx/scripts/quickorder.js'

  'fx/scripts/newsletter.js'
  'fx/scripts/consultant.newsletter.js'

  'fx/scripts/gothia.js'
  'fx/scripts/maps.js'
  'fx/scripts/search.js'

  'fx/scripts/oldie.js'
  output='fx/cache/c-all.js'
  combine=true
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block javascript %}
{% endblock %}

{% render 'NewsletterBundle:Default:js' %}

<script>if (jaiks) {jaiks.exec();}</script>
{#
 # TODO: find a better solution.
 # we need this hack to get single shipping types to play nice...
#}
{% if page_type is defined and page_type == 'checkout' %}
<script>
  if (1 == $('#shipping-block input').length) {
    $('#shipping-block input').first().click();
  }
</script>
{% endif %}
{{ google_analytics_tag() }}
</body>
</html>
