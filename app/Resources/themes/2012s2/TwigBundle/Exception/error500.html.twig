{% set browser_title = ' / '~'500.title'|trans({}, 'error') %}
{% set page_type = 'exception' %}
{% set body_classes = 'cms global error-500' %}

{% extends layout %}

{% block content %}

<h1>{{ '500.title'|trans({}, 'error') }}</h1>

<div style="padding: 10px;">
  <p>{{ '500.description'|trans({}, 'error')|raw }}</p>

  <form name="{{ path('_search') }}" action="" method="get">
    <input type="text" name="keywords" id="keywords" value="">
    <input class="button" type="submit" value="{{ 'Search'|trans }}">
    <input type="hidden" name="search_in_description" value="1">
  </form>
</div>

{% endblock %}
