<html>
<head>
  <title></title>
  {% stylesheets
    'fx/2013s1/css/960_8_3_3.css'

    'fx/2013s1/css/style.css'
    'fx/2013s1/css/rma_pdf.css'

    output='fx/cache/rma_pdf.css'
    combine=true
  %}
  <link rel="stylesheet" href="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset_url }}" />
  {% endstylesheets %}
</head>
<body>
  <div id="container" class="container container_8">
    <div class="grid_4 alpha company_details">
      {{ fx_image_tag('images/POMPdeLUX_logo_SS12.png', '0x100', {'id':'logo', 'alt':'POMPdeLUX'}) }}
      {{ 'rma.slip.company_details'|trans({}, 'rma')|raw }}
    </div>
    <div class="grid_4 omega">
      <table>
        <tbody>
          <tr>
            <th>
              {{ 'rma.slip.id'|trans({}, 'rma') }}
            </th>
            <td>
              {{ customer.id }}
            </td>
          </tr>
          <tr>
            <th>
              {{ 'rma.slip.name'|trans({}, 'rma') }}
            </th>
            <td>
              {{ customer.name }}
            </td>
          </tr>
          <tr>
            <th>
              {{ 'rma.slip.email'|trans({}, 'rma') }}
            </th>
            <td>
              {{ customer.email }}
            </td>
          </tr>
          <tr>
            <th>
              {{ 'rma.slip.phone'|trans({}, 'rma') }}
            </th>
            <td>
              {{ customer.phone }}
            </td>
          </tr>
          <tr>
            <th>
              {{ 'rma.slip.order_id'|trans({}, 'rma') }}
            </th>
            <td>
              #{{ order.id }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <hr class="right">
    <div class="grid_8 alpha omega">
      <h1>{{ 'rma.slip.title.order_id'|trans({'%order_id%': order.id}, 'rma') }}</h1>
      <p>{{ 'rma.slip.description'|trans({}, 'rma')|raw }}</p>
    </div>
    <div class="grid_8 alpha omega">
      {% if products %}
        <table class="rma_products">
          <thead>
            <tr>
              <th class="left">{{ "products"|trans }}</th>
              <th class="left">{{ "rma.slip.thead.activitycode"|trans({}, 'rma') }}</th>
              <th class="left">{{ "rma.slip.thead.description"|trans({}, 'rma') }}</th>
            </tr>
          </thead>
          <tbody>
          {% for product in products %}
            <tr class="item">
              <td class="image left">
              {% if false %}
                {{ product_image_tag(product.basket_image, '57x100', { 'alt' : product.products_name }) }}
              {% endif %}
                <div class="info" data-product_id="{{ product.products_id }}" data-confirmed="">
                  <span class="title">{{ product.products_name }}</span>
                  <div class="size">
                    <label>{{ "size"|trans }}:</label>
                    <span>{{ product.products_size }}</span>
                  </div>
                  <div class="color">
                    <label>{{ "color"|trans }}:</label>
                    <span>{{ product.products_color }}</span>
                  </div>
                </div>
              </td>
              <td class="rma-activitycode">{{ product.rma_activitycode|trans({}, 'rma')|upper }}</td>
              <td class="rma-description">{{ product.rma_description|raw|nl2br }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      {% endif %}
    </div>

  </div> <!-- ./#container -->
</body>
</html>
