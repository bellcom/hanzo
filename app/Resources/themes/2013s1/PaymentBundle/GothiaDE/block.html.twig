<h2>{{ 'payment.gothia.title'|trans({}, 'checkout') }}</h2>

<form name="payment-gothia-de" id="gothia-de" action="{{ path('PaymentBundle_gothiade_payment') }}" method="post">
    <ul class="payment-methods" id="payment-method-gothia">
        <li>
            <input type="radio" value="gothia" id="gothia" name="paytype">
            <label for="gothia">
                <img alt="gothia" src="{{ cdn }}fx/images/icons/gothia_paybybill.jpg"> {{ 'payment.gothia.desc'|trans({}, 'checkout')|raw }}
            </label>
        </li>
        <li>
            <input type="radio" value="gothia_lv" id="gothia_lv" name="paytype">
            <label for="gothia_lv">
                <img alt="gothia_lv" src="{{ cdn }}fx/images/icons/gothia_lv.jpg"> {{ 'payment.gothia_lv.desc'|trans({}, 'checkout')|raw }}
            </label>
        </li>
    </ul>
</form>
