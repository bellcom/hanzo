<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ html_lang }}" xmlns:og="http://ogp.me/ns#"> <!--<![endif]-->
<head>
<title>{{ 'browser.title'|trans }} {{ browser_title|default('') }}</title>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="robots" content="NOINDEX, NOFOLLOW">

<link rel="dns-prefetch" href="{{ cdn|replace({'http:':''}) }}">
<link rel="dns-prefetch" href="//cdn.jquerytools.org">
<link rel="dns-prefetch" href="//html5shim.googlecode.com">
<link rel="dns-prefetch" href="//fonts.googleapis.com">

<link href="//fonts.googleapis.com/css?family=Merriweather:400,700,900" rel="stylesheet" type="text/css">
<link rel="shortcut icon" href="/fx/images/favicon.ico" title="POMPdeLUX" type="image/ico">

{% stylesheets
  'fx/2013s1/css/960_8_3_3.css'
  'fx/2013s1/css/jquery.fullimagebox.css'

  'fx/css/colorbox/theme4/colorbox.css'
  'fx/css/jquery-ui.css'
  'fx/scripts/video-js/video-js.css'
  'fx/scripts/fullcalendar/fullcalendar.css'

  'fx/2013s1/css/screen.css'
  'fx/2013s1/css/style.css'

  output='fx/cache/2013s1.css'
  combine=true
%}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}

<script type="text/javascript" src="{{ cdn }}fx/scripts/modernizr-2.5.3.js"></script>
</head>
<body id="body-{{ page_type|default('page') }}" class="{{ body_classes|default('') }} consultant {{ html_lang }}">

<div id="container" class="container container_8">
  <header class="grid_8 row">
    <a href="{{ path('_homepage', {'_locale' : app.request.locale}) }}" title="{{ "home"|trans }}">
      {{ fx_image_tag('images/POMPdeLUX_logo_SS12.png', '0x100', {'id':'logo', 'alt':'POMPdeLUX'}) }}
    </a>
  {% if simple_layout is not defined %}
    <nav class="menu main-menu horizontal">
      {% if is_granted('ROLE_USER') %}
        {% render 'CMSBundle:Menu:menu' with {'type': left_menu.type, 'thread': 10, 'from': left_menu.from } %}
      {% endif %}
    </nav><!-- /nav.main -->
  {% endif %}
    <hr class="right">
  </header>

  <div id="main" role="main" class="main clearfix grid_8">
    {% block content %}{% endblock %}
  </div><!-- /div#main -->

{% if simple_layout is not defined %}
  <nav id="secondary-links">
    {% if is_granted('ROLE_USER') %}
      <ul class="horizontal menu right first">
        <li class="last"><a href="{{ path('_account', {'_locale' : app.request.locale}) }}">{{ "my.account"|trans({}, 'account') }}</a></li>
      </ul>
      <ul class="horizontal menu right second">
        <li id="mini-basket" class="basket">
          <span class="sprite"></span>
          <a href="{{ path('basket_view', {'_locale' : app.request.locale}) }}" title="{{ "show.basket"|trans }}"> {% render 'BasketBundle:Default:miniBasket' %} </a>
        </li>
        <li class="last"><a href="{{ path('basket_view', {'_locale' : app.request.locale}) }}">{{ "show.basket"|trans }}</a></li>
      </ul>
    {% endif %}
  </nav>
{% endif %}
  <footer class="container container_8">
    <div class="grid_8">
      <hr class="left row">
    </div>
    <div class="copy grid_8">
      {{ 'footer.address'|trans({'%cdn%':cdn})|raw }}
    </div>
  </footer>
</div>

<script type="text/javascript">
  var cookie_params = {
    'domain' : '{{ app.request.getHttpHost() }}',
    'path' : '{{ path('_homepage', {'_locale' : app.request.locale}) }}'
  };
  var base_url = '{{ url('_homepage', {'_locale' : app.request.locale}) }}';
  var cdn_url = '{{ cdn }}';
  var counter_offset = 1314691200;
</script>

<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'js', '_locale' : app.request.locale }) }}"></script>

