<div class="social-buttons">
	<a href="http://www.facebook.com/sharer.php?u={{ url|url_encode }}" class="facebook icons-facebook social-button sprite" title="{{ 'share.to.%method%'|trans({'%method%':'Facebook'}) }}"></a>
	<a href="http://twitter.com/share?text={{ description }}&url={{ url|url_encode }}" class="twitter icons-twitter social-button sprite" target="_blank" title="{{ 'share.to.%method%'|trans({'%method%':'Twitter'}) }}"></a>
	<a href="http://pinterest.com/pin/create/button/?url={{ url|url_encode }}&media={{ image|url_encode }}&description={{ description }}" class="pinterest icons-pinterest social-button sprite" title="{{ 'share.to.%method%'|trans({'%method%':'Pinterest'}) }}"></a>
</div>