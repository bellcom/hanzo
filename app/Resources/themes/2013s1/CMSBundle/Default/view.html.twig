{% block javascript %}
<script>
var $pinterest = $('.social-buttons .pinterest');
if ($pinterest.length) {
    var image = $('#main article img');
    if (image.length) {
        image = image.last();
        var url = $pinterest.attr('href');
        url = url.replace('=&', '='+encodeURIComponent(image.attr('src'))+'&');
        $pinterest.attr('href', url);
    } else {
        $pinterest.hide();
    }
}
</script>
{% endblock %}
