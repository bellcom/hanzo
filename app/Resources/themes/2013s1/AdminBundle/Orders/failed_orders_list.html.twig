

{% for order in orders %}

  {% if loop.first %}

    <form action="{{ path('admin_orders_resync_sync', {order_id : 0, all : 1}) }}" method="post" id="failed-orders-form">
      <table class="bottom">
        <thead>
          <tr>
            <th nowrap>Ordre nr.</th>
            <th nowrap>Dato</th>
            <th nowrap>Fejlbesked</th>
            <th nowrap>Metode</th>
            <th nowrap></th>
          </tr>
        </thead>

  {% endif %}

        <tr>
          <td nowrap>{{ order.ordersId }}</td>
          <td nowrap>{{ order.createdAt|date('d/m/Y H:i') }}</td>
          <td>{{ order.comment|replace({'--->' : '<br>--->'})|raw }}</td>
          <td>{{ order.data.salesOrder.SalesTable.TransactionType }}</td>
          <td nowrap>
            <a href="#" class="delete-order" data-order-id="{{ order.ordersId }}" data-confirm-message="Er du sikker på du ønsker at slette ordrenummer: {{ order.ordersId }}">Slet</a>
            <a href="{{ path('admin_orders_preview', {order_id : order.ordersId}) }}" class="preview-order">Gennemse</a>
            {% if order.data.salesOrder.SalesTable.TransactionType == 'Write' %}
              <a href="{{ path('admin_orders_resync_sync', {order_id : order.ordersId}) }}" class="resend-order">Gensend</a>
            {% endif %}
          </td>
        </tr>

  {% if loop.last %}

      </table>
    </form>

  {% endif %}

{% else %}
  <p>Pt. ingen fejlede ordre</p>
{% endfor %}
