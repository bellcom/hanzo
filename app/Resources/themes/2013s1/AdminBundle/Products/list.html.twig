{% extends '::adminbase.html.twig' %}

{% block content %}

{% if categories|length > 0 and parent_category %}

  <nav class="sub">
    <ul>
      <li>
        <form action="{{ path('admin_products') }}" method="get">
          <input type="text" id="searh" name="q" placeholder="{{ 'search.label'|trans({}, 'admin') }}">
          <input class="button search" type="submit" value="{{ 'search'|trans({}, 'admin') }}">
        </form>
      </li>
      <li>
        <a href="{{ path('admin_products') }}" title="{{ 'admin.back.button'|trans({}, 'admin') }}">
          {{ 'admin.back.button'|trans({}, 'admin') }}
        </a>
      </li>
      {% if is_granted('ROLE_ADMIN') %}
      <li>
        <a href="{{ path('admin_category_edit') }}" title="{{ 'admin.add.category'|trans({}, 'admin') }}">
          {{ 'admin.add.category'|trans({}, 'admin') }}
        </a>
      </li>
      <li>
        <a href="{{ path('admin_stock') }}" title="{{ 'admin.stock.export'|trans({}, 'admin') }}">
          {{ 'admin.stock.export'|trans({}, 'admin') }}
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>

  <h1>{{ 'admin.categories.list.header.text.%category-name%'|trans({'%category-name%' : parent_category.title}, 'admin') }}</h1>

  <p>{{ 'admin.subcategories.list.description.text'|trans({}, 'admin') }}</p>

{% elseif products|length > 0 %}

  <nav class="sub">
    <ul>
      <li>
        <form action="{{ path('admin_products') }}" method="get">
          <input type="text" id="searh" name="q" placeholder="{{ 'search.label'|trans({}, 'admin') }}">
          <input class="button search" type="submit" value="{{ 'search'|trans({}, 'admin') }}">
        </form>
      </li>
      <li>
        <a href="{{ path('admin_products', {'category_id' : category_id}) }}" title="{{ 'admin.back.button'|trans({}, 'admin') }}">
          {{ 'admin.back.button'|trans({}, 'admin') }}
        </a>
      </li>
      {% if is_granted('ROLE_ADMIN') %}
      <li>
        <a href="{{ path('admin_stock') }}" title="{{ 'admin.stock.export'|trans({}, 'admin') }}">
          {{ 'admin.stock.export'|trans({}, 'admin') }}
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>

  {% if parent_category %}
  <h1>{{ 'admin.products.list.header.text.%category-name%'|trans({'%category-name%' : parent_category.title}, 'admin') }}</h1>
  {% elseif search_query %}
  <h1>{{ 'admin.products.list.header.text.%search-query%'|trans({'%search-query%' : search_query}, 'admin') }}</h1>
  {% else %}
  <h1>{{ 'admin.categories.list.header.text'|trans({}, 'admin') }}</h1>
  {% endif %}
  <p>{{ 'admin.products.list.description.text'|trans({}, 'admin') }}</p>

{% else %}
  <nav class="sub">
    <ul>
      <li>
        <form action="{{ path('admin_products') }}" method="get">
          <input type="text" id="searh" name="q" placeholder="{{ 'search.label'|trans({}, 'admin') }}">
          <input class="button search" type="submit" value="{{ 'search'|trans({}, 'admin') }}">
        </form>
      </li>
      {% if is_granted('ROLE_ADMIN') %}
      <li>
        <a href="{{ path('admin_stock') }}" title="{{ 'admin.stock.export'|trans({}, 'admin') }}">
          {{ 'admin.stock.export'|trans({}, 'admin') }}
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>

  <h1>{{ 'admin.categories.list.header.text'|trans({}, 'admin') }}</h1>

  <p>{{ 'admin.categories.list.description.text'|trans({}, 'admin') }}</p>
{% endif %}


{% for message in app.session.flashbag.get('notice') %}
<div class="message notice">
  {{ message|trans({}, 'admin') }}
</div>
{% endfor %}

  {% if categories|length > 0 %}
    {% if parent_category %}
     <ul id="category-list">
  	  {% for category in categories %}

  	    <li id="item-{{ category.id }}">
          <a href="{{ path('admin_products', {'category_id' : parent_category.id, 'subcategory_id' : category.id}) }}" title="{{ category.title }}">
            <span class="id">(#{{ category.id }})</span>
            <span class="title">{{ category.title }}</span>
          </a>
          <a href="{{ path('admin_products_sort', {'category_id' : category.id}) }}" class="right" title="{{ 'admin.categories.list.sort-link.text'|trans({}, 'admin') }}">
            {{ 'admin.categories.list.sort-link.text'|trans({}, 'admin') }}
          </a>
        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('admin_category_edit', {'id' : category.id}) }}" class="right" title="{{ 'admin.categories.list.edit-link.text'|trans({}, 'admin') }}">
            {{ 'admin.categories.list.edit-link.text'|trans({}, 'admin') }}
          </a>
          <a href="{{ path('admin_category_delete', {'id' : category.id}) }}" class="right delete" title="{{ 'admin.categories.list.delete-link.text'|trans({}, 'admin') }}">
            {{ 'admin.categories.list.delete-link.text'|trans({}, 'admin') }}
          </a>
        {% endif %}
  	    </li>

  	  {% endfor %}
  	 </ul>
    {% else %}
     <ul id="category-list">
      {% for category in categories %}

        <li id="item-{{ category.id }}">
          <a href="{{ path('admin_products', {'category_id' : category.id}) }}" title="{{ category.title }}">
            <span class="id">(#{{ category.id }})</span>
            <span class="title">{{ category.title }}</span>
          </a>
        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('admin_category_edit', {'id' : category.id}) }}" class="right" title="{{ 'admin.categories.list.edit-link.text'|trans({}, 'admin') }}">
            {{ 'admin.categories.list.edit-link.text'|trans({}, 'admin') }}
          </a>
          <a href="{{ path('admin_category_delete', {'id' : category.id}) }}" class="right delete" title="{{ 'admin.categories.list.delete-link.text'|trans({}, 'admin') }}">
            {{ 'admin.categories.list.delete-link.text'|trans({}, 'admin') }}
          </a>
        {% endif %}
        </li>

      {% endfor %}
     </ul>
    {% endif %}
  {% elseif products|length > 0 %}
   <ul id="product-list">
    {% for product in products %}

      <li id="item-{{ product.id }}">
        <a href="{{ path('admin_product', {'id' : product.id}) }}" title="{{ product.sku }}">
          <span class="id">(#{{ product.id }})</span>
          <span class="sku">{{ product.sku }}</span>
        </a>
      </li>

    {% endfor %}
   </ul>
  {% else %}

  {% endif %}

{% endblock %}
