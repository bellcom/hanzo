{% extends '::adminbase.html.twig' %}

{% block content %}
    <nav class="navbar navbar-default" role="navigation">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('admin_cms_redirects') }}">{{ 'admin.back.button'|trans({}, 'admin') }}</a></li>
            </ul>
        </div>
    </nav>

    <h1>{{ 'admin.cms.redirects.edit.header.text'|trans({}, 'admin') }}</h1>

    {% for message in app.session.flashbag.get('notice') %}
        <div class="alert alert-info">
            {{ message|trans({}, 'admin') }}
        </div>
    {% endfor %}

    <p>{{ 'admin.cms.redirects.edit.description.text'|trans({}, 'admin') }}</p>

    {% form_theme form 'AdminBundle:Form:fields.html.twig' %}
    <form action="{{ path('admin_cms_redirect_edit', {'id' : redirect.id }) }}" method="post" {{ form_enctype(form) }} id="cms-redirect-edit-form" class="form-horizontal" role="form">
        {{ form_rest(form) }}

        <div class="form-group">
            <input class="button  btn btn-success" type="submit" value="{{ 'update.redirect'|trans({}, 'admin') }}">
            <a class="button  btn btn-default" href="{{ path('admin_cms_redirects') }}">{{ 'cancel'|trans({}, 'admin') }}</a>
        </div>

        {{ form_row(form._token) }}
    </form>



{% endblock %}
