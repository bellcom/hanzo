{% extends layout %}

{% block meta %}
{% if ('headers.'~page_type)|trans({}, 'category') != 'headers.'~page_type %}
{{ meta_tags('og:description,description') }}
<meta property="og:description" content="{{ ('headers.'~page_type)|trans({}, 'category')|raw|strip_tags }}">
<meta name="description" content="{{ ('headers.'~page_type)|trans({}, 'category')|raw|strip_tags }}">
{% endif %}
{% endblock %}

{% block content %}

{% if ('headers.'~page_type)|trans({}, 'category') != 'headers.'~page_type %}
<header class="grid_8 alpha omega">
    <hgroup>
        {{ ('headers.'~page_type)|trans({}, 'category')|raw }}
    </hgroup>
</header>
{% else %}
<!-- {{ 'headers.'~page_type }} -->
{% endif %}

<div class="grid_8 alpha omega row">
    {% render 'CMSBundle:Menu:menu' with {'type': 'breadcrumb', 'thread': 20} %}
</div>

<div class="grid_8 alpha omega row">
    <div class="grid_4 push_2 alpha">
        <a href="{{ url(app.request.attributes.get('_route'), {'show': 'overview'}) }}" class="show-by-overview">{{ 'category.selector.overview'|trans }}</a> /
        <a href="{{ url(app.request.attributes.get('_route'), {'show': 'look'}) }}" class="show-by-look">{{ 'category.selector.look'|trans }}</a>
    </div>

    <div class="pager ajax js-pager-container off" data-target="product-list">
        <li><a href="{{ app.request.uri }}" title="">...</a></li>
    </div>
{#
  {% if paginate %}
    <div class="grid_4 omega right">
        {% import "::macro.pager.html.twig" as p %}
        {{ p.pager(paginate, 'product-list') }}
    </div>
    {% endif %}
#}
</div>

<div class="grid_8 alpha omega row">

    <form action="{{ url(app.request.attributes.get('_route')) }}" class="js-faceted-form">
        <div class="grid_2 alpha sub-menu menu">
            {% render 'CMSBundle:Menu:menu' with {'type': 'sub', 'offset': cms_id, 'thread' : 20, 'include_self' : true } %}

            <ul class="js-faceted-container">
                <li class="heading item">
                    <a class="heading">Colours</a>
                    <ul class="sub">
                        <li class="inactive item first"><input type="checkbox" name="color[]" value="rose" id="color_rose"/><label for="color_rose"> Rose</label></li>
                        <li class="inactive item"><input type="checkbox" name="color[]" value="ice blue" id="color_ice_blue"/><label for="color_ice_blue"> Ice Blue</label></li>
                        <li class="inactive item"><input type="checkbox" name="color[]" value="curry" id="color_curry"/><label for="color_curry"> Curry</label></li>
                        <li class="inactive item"><input type="checkbox" name="color[]" value="blue - cerise" id="color_blue_cerise"/><label for="color_blue_cerise"> Blue & Cerise</label></li>
                        <li class="inactive item"><input type="checkbox" name="color[]" value="wine" id="color_wine"/><label for="color_wine"> Wine</label></li>
                        <li class="inactive item"><input type="checkbox" name="color[]" value="grey" id="color_grey"/><label for="color_grey"> Grey</label></li>
                        <li class="inactive item last"><input type="checkbox" name="color[]" value="denim" id="color_denim"/><label for="color_denim"> Denim</label></li>
                    </ul>
                </li>
                <li class="heading item">
                    <a class="heading">Sizes</a>
                    <ul class="sub">
                        <li class="inactive item first"><input type="checkbox" name="size[]" value="98-104" id="size_98_104"><label for="size_98_104">98-104</label></input></li>
                        <li class="inactive item"><input type="checkbox" name="size[]" value="104" id="size_104"><label for="size_104">104</label></input></li>
                        <li class="inactive item"><input type="checkbox" name="size[]" value="110-116" id="size_110_116"><label for="size_110_116">110-116</label></input></li>
                        <li class="inactive item"><input type="checkbox" name="size[]" value="122-128" id="size_122_128"><label for="size_122_128">122-128</label></input></li>
                        <li class="inactive item"><input type="checkbox" name="size[]" value="134-140" id="size_134_140"><label for="size_134_140">134-140</label></input></li>
                        <li class="inactive item last"><input type="checkbox" name="size[]" value="146-152" id="size_146_152"><label for="size_146_152">146-152</label></input></li>
                    </ul>
                </li>
            </ul>

            <a class="" href="{{ url(app.request.attributes.get('_route')) }}">Â» Nulstil filtre</a>
        </div>
    </form>

    <div class="grid_6 omega">
        <div class="product-list clearfix grid_6 alpha omega row">
            <div class="old-item">
        {% for product in products %}
            {% if loop.index % 3 == 1 %}
                <div class="grid_6 alpha omega row">
            {% endif %}
                    <div class="block block-num-{{ loop.index }} grid_2 {% if loop.index % 3 == 1 and loop.index is not divisibleby(3) %} alpha {% endif %}{% if loop.index is divisibleby(3) %} omega {% endif %}">
                        <a href="{{ product.url }}" title="{{ "more.product.info"|trans({'%name%' : product.title}) }}" class="product flip-this">
                            {{ product_image_tag(product.image, '234x410', {
                                'alt' : product.alt,
                                'data-flip': product_image_url(product.image_flip, '234x410'),
                                'height' : '410',
                                'width' : '234'
                            }) }}
                        {% if product.prices.sales is defined and show_new_price_badge %}
                            <div class="new-price"></div>
                        {% endif %}
                        {% if product.out_of_stock %}
                            <div class="out-of-stock"></div>
                        {% endif %}
                        </a>
                        <a href="{{ product.url }}" title="{{ "more.product.info"|trans({'%name%' : product.title}) }}" class="product-description">
                            <span class="title">{{ product.title }}</span>
                            <span class="prices">
                            {% if product.prices.sales is defined %}
                                <span class="normal strike">{{ product.prices.normal.price|money }}</span>
                                <span class="discount">{{ product.prices.sales.price|money }}</span>
                            {% else %}
                                <span class="normal">{{ product.prices.normal.price|money }}</span>
                            {% endif %}
                            </span>
                        </a>
                    </div>
            {% if loop.index is divisibleby(3) or loop.last %}
                </div>
            {% endif %}
        {% else %}
                <div class="out-of-stock">
                    {{ 'all.products.out.of.stock'|trans }}
                </div>
        {% endfor %}
            </div>
        </div>
        <div class="grid_4 push_2 omega right">
        {% if products|length > 0 %}
            <a href="#" class="to-top">{{ 'goto.top.link'|trans }}</a>
        {% endif %}
{#
      {% if paginate %}
          {% import "::macro.pager.html.twig" as p %}
          {{ p.pager(paginate, 'product-list') }}
      {% endif %}
#}
      </div>
  </div>
</div>

{#  yatzy js template used by the pager, do not delete ! #}
<script type="text/html" id="productItems">
<div class="new-item">
<? for(i=0, l=data.length; i<l; i++) {?>
    <? if((i+1)%3 === 1) {?>
        <div class="grid_6 alpha omega row">
    <?}?>
        <div class="block block-num-<?=(i+1)?> grid_2 <? if((i+1)%3===1){?>alpha<?}?> <? if((i+1)%3===0){?>omega<?}?>">
            <a href="<?=data[i].url?>" title="<?=Translator.get('js:more.product.info', {'%name%' : data[i].title})?>" class="product flip-this">
                <img src="<?=data[i].image?>" alt="<?=data[i].alt?>" class="flip" data-flip="<?=data[i].image_flip?>">
            {% if show_new_price_badge == 1 %}
                <? if(undefined !== data[i].prices.sales) {?>
                    <div class="new-price"></div>
                <? }?>
            {% endif %}
                <? if(data[i].out_of_stock) {?>
                    <div class="out-of-stock"></div>
                <? }?>
            </a>
            <a href="<?=data[i].url?>" title="<?=Translator.get('js:more.product.info', {'%name%' : data[i].title})?>">
                <span class="title"><?=data[i].title?></span>
                <span class="prices">
                <? if(undefined === data[i].prices.sales) {?>
                    <span class="normal"><?=data[i].prices.normal.formattet?></span>
                <?}else{?>
                    <span class="normal strike"><?=data[i].prices.normal.formattet?></span>
                    <span class="discount"><?=data[i].prices.sales.formattet?></span>
                <? }?>
                </span>
            </a>
        </div>
    <? if((i+1)%3 === 0 || (i+1) === l){?>
        </div>
    <?}?>
<? }?>
</div>
</script>

{% endblock %}
