        <input type="text" name="" value="">
      </li>
      <li>
        <label>Addresse:</label>
        <input type="text" name="" value="">
      </li>
      <li>
        <label>Postnummer:</label>
        <input type="text" name="" value="">
      </li>
      <li>
        <label>By:</label>
        <input type="text" name="" value="">
      </li>
      <li>
        <label>Land:</label>
        <input type="text" name="" value="" readonly>
      </li>
    </ul>
    <ul class="left">
      <li>
        <h3 class="toggle">Leveringsadresse</h3>
        <ul>
          <li>
            <label>Fornavn:</label>
            <input type="text" name="" value="">
          </li>
          <li>
            <label>Efternavn:</label>
            <input type="text" name="" value="">
          </li>
          <li>
            <label>Firmanavn:</label>
            <input type="text" name="" value="">
          </li>
          <li>
            <label>Addresse:</label>
            <input type="text" name="" value="">
          </li>
          <li>
            <label>Postnummer:</label>
